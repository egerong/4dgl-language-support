{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "4DGL",
	"patterns": [

		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#funcs"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.4dgl",
					"match": "\\b(if|else|endif|case|break|for|next|return)\\b"
				},
				{
					"name": "keyword.operator.4dgl",
					"match": "(\\+|:=|-|&&|\\|\\||<|>|>=|<=|==|\\+=|%|\\*|[^/][/][^/*])"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.4dgl",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.4dgl",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.4dgl",
					"begin": "\\'",
					"end": "\\'",
					"patterns": [
						{
							"name": "constant.character.escape.4dgl",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.4dgl",
					"begin": "//",
					"end": "\n"
				},
				{
					"name": "comment.block.4dgl",
					"begin": "\/[*]",
					"end": "[*](\/)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "\\W([0-9]+)",
					"captures": {
						"1": {"name": "constant.numeric.4dgl"}
					}
				}
			]
		},
		"variables": {
			"patterns": [
				{

					"match": "\\b(var) (private )?(\\w*)\\b",
					"captures": {
						"1": {"name": "storage.type.4dgl"},
						"2": {"name": "storage.modifier.4dgl"},
						"3": {"name": "variable.parameter.4dgl"}
					}
				}
			]
		},
		"funcs": {
			"name": "meta.function.4dgl",
			"begin": "\\b(func) +(.*?)\\(",
			"beginCaptures": {
				"1": {"name": "storage.type.4dgl"},
				"2": {"name": "entity.name.function.4dgl"}
			},
			"end": "\\b(endfunc)\\b",
			"endCaptures": {
				"1": {"name": "storage.type.4dgl"}
			},
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#constants"
				}
			]
		},
		"errors": {
			"patterns": [
				{
					"name": "invalid.illegal",
					"match": "^.*[^;](\n|//|/\\*"
				}
			]
		}
	},
	"scopeName": "source.4dgl"
}

